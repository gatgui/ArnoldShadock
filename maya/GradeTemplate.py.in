import maya.mel
from mtoa.ui.ae.shaderTemplate import ShaderAETemplate

class AE@GRADE_MAYA_NODENAME@Template(ShaderAETemplate):
   def setup(self):
      self.beginScrollLayout()
      
      self.beginLayout("Parameters", collapse=False)
      self.addControl("input")
      self.beginLayout("White Balance", collapse=False)
      self.addControl("in_black")
      self.addControl("in_white")
      self.addControl("out_black")
      self.addControl("out_white")
      self.endLayout()
      self.beginLayout("Hue & Saturation", collapse=False)
      self.addControl("saturation_scale")
      self.addControl("hue_shift")
      self.endLayout()
      self.beginLayout("Non Linear", collapse=False)
      self.addControl("bias")
      self.addControl("gain")
      self.addControl("gamma")
      self.endLayout()
      self.addControl("exposure")
      self.endLayout()
      
      maya.mel.eval('AEdependNodeTemplate '+self.nodeName)
      self.addExtraControls()
      self.endScrollLayout()

